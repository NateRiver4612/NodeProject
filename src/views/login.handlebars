{{#if message}}
<div class="alert alert-{{message.type}} alert-dismissible fade show" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    <strong>{{message.intro}}: </strong> {{message.message}}
</div>
{{/if}}
<div class="login-card">
    <div class="login-container">
        <div class="title-container">
            <h1>Sign In</h1>
        </div>
        <form class="login-form" method="post" action="/login">
            <div class="form-group ">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" name="username" id="username">
            </div>
            <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" id="password">
            </div>
            {{#if flash}}
            <div class="mb-3 " style="margin-top: 10px;">
                <input disabled style="background-color:#f8d7db; color:#83353d !important" type="text"
                    value="{{flash.message}}" class="form-control">
            </div>
            {{/if}}
            <button style="margin-top: 10px;" type="submit" class="btn btn-primary">Submit</button>
            <a style="margin-top: 10px;" href="/forgot-password" class="btn btn-secondary">Forgot password</a><br
                style=" margin-top: 20px;">
            <a style="margin-top: 10px;" href="/register">Haven't a user yet?</a>
        </form>
    </div>
</div>