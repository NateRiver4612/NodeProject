<div class="history-detail-container">
    <table class="table history-table">
        <thead>
            <tr>
                <th scope="col">Mã giao dịch</th>
                <th scope="col">Tài khoản</th>
                <th scope="col">Tiền chuyển</th>
                <th scope="col">Người nhận</th>
                <th scope="col">Ngày giao dịch</th>
                <th scope="col">Trạng thái giao dịch</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td class="btn btn-light">{{_id}}</td>
                <td>{{username}}</td>
                <td class="total">{{total}}</td>
                <td class="total">{{receiver_fullname}}</td>
                <td>{{date}}</td>
                <td>
                    <input id="status" disabled class="history-status alert-success" role="alert" value="{{status}}" />
                </td>
                <td>
                    <a href="/user/history/transfer/{{_id}}" class="btn btn-primary">Chi tiết</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <script src="../../js/main.js"></script>
</div>