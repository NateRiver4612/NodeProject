{{#if message}}
<div class="alert alert-{{message.type}} alert-dismissible fade show" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    <strong>{{message.intro}}: </strong> {{message.message}}
</div>
{{/if}}
<div class="admin-home-container">
    <div class="admin-racharge-table-container">
        <h3 style="color: white">Danh sách tài khoản chờ kích hoạt</h3>
        <table id="admin-racharge-table" class="admin-racharge-table table">
            <thead>
                <tr>
                    <th scope="col">Tài khoản</th>
                    <th scope="col">Chủ tài khoản</th>
                    <th scope="col">Ngày khởi tạo</th>
                    <th scope="col">Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <th scope="row">{{username}}</th>
                    <td>{{fullname}}</td>
                    <td>{{created_date}}</td>
                    <td>{{status}}</td>
                    <td>
                        <a href="/admin/accounts/pending/{{_id}}">Chi tiết</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>